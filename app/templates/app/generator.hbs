<div uk-grid='' margin='' class='uk-grid-divider uk-grid'>

  <div class='uk-width-1-1 uk-width-1-3@m'>
    <SettingsForm @model={{this.model}} />


      <button
        type='button'
        class='uk-button uk-button-primary uk-align-center'
        disabled={{this.exportDisabled}}
        {{on 'click' this.exportSTL}}
      >
        {{#if this.meshGenerating}}
          <div uk-spinner></div>
        {{else}}
          {{t 'export_stl'}}
        {{/if}}
      </button>

      <button
        type='button'
        class='uk-button uk-align-center'
        {{on 'click' this.showSaveModal}}
      >
        {{t 'save'}}
      </button>



    {{#if this.counter}}
      <div class='uk-text-small uk-text-muted uk-text-center'>
        {{t 'stl_counter' count=this.counter}}
      </div>
    {{/if}}
  </div>

  <div class='uk-width-1-1 uk-width-2-3@m'>
    <ThreePreview @mesh={{this.mesh.value}} as |preview|>
      <div class='uk-card uk-card-hover uk-card-small'>
        <div class='uk-card-media-top'>
          <preview.renderer />
        </div>
        <div class='uk-card-footer'>
          <preview.size class='uk-text-small uk-text-muted uk-text-center' />
        </div>
      </div>
    </ThreePreview>
  </div>
</div>

{{#if this.saveModalVisible}}
  <SaveModal @onHide={{this.hideSaveModal}} @currentUrl={{this.currentUrl}} />
{{/if}}