<fieldset class="uk-fieldset">
  {{#if this.showSupportSettings}}
    <div class="uk-margin" data-test-settings-support-padding>
      <label class="uk-form-label uk-text-bold" >
        {{t "text_settings.supportPadding"}}
      </label>
      {{#each this.supportPaddingDirs as |dir|}}        
        <div class="uk-flex uk-flex-row uk-flex-middle uk-margin-small-top">
          <label class="uk-form-label uk-width-1-3" for="support-padding-{{dir}}">
            {{t (concat "text_settings.supportPaddingDir." dir)}}
          </label>
          <div class="uk-width-1-3">
            <Ui::Input
              id="support-padding-{{dir}}"
              class="uk-input"
              @type="number"
              @value={{get @model.supportPadding dir}}
              @onChange={{fn this.setSupportPaddingInt dir}}
              data-test-settings-supportPadding={{dir}}
            />
          </div>
          <div>&nbsp;</div>
          <div>
            <label class="uk-form-label">
              {{t "mm_unit"}}
            </label>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</fieldset>