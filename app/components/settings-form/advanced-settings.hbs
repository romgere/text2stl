<fieldset class="uk-fieldset">
  {{#if this.showSupportSettings}}
    <div class="uk-margin" data-test-settings-support-padding>
      <label class="uk-form-label" >
        {{t "text_settings.supportPadding"}}
      </label>
      {{#each this.supportPaddingDirs as |dir|}}
        <div class="uk-flex uk-flex-row uk-flex-middle uk-margin-small-top uk-margin-small-left">
          <label class="uk-form-label uk-width-1-3 uk-text-meta" for="support-padding-{{dir}}">
            {{t (concat "text_settings.supportPaddingDir." dir)}}
          </label>
          <div class="uk-width-1-3">
            <Ui::Input
              id="support-padding-{{dir}}"
              class="uk-input"
              @type="number"
              @value={{get @model.supportPadding dir}}
              @onChange={{fn this.setSupportPaddingInt dir}}
              data-test-settings-supportPadding={{dir}}
            />
          </div>
          <div>&nbsp;</div>
          <div>
            <label class="uk-form-label">
              {{t "mm_unit"}}
            </label>
          </div>
        </div>
      {{/each}}
    </div>

    <div class="uk-margin">
      <label class="uk-form-label" for="support-border-radius">
        {{t "text_settings.supportBorderRadius"}}
      </label>
      <div class="uk-flex uk-flex-row uk-flex-middle">
        <div class="uk-width-1-3">
          <Ui::Input
            id="support-border-radius"
            class="uk-input"
            @type="number"
            @value={{@model.supportBorderRadius}}
            @onChange={{fn this.setInt 'supportBorderRadius'}}
            data-test-settings-supportBorderRadius
          />
        </div>
        <div>&nbsp;</div>
        <div>
          <label class="uk-form-label">
            {{t "mm_unit"}}
          </label>
        </div>
      </div>
    </div>
    

  {{/if}}
</fieldset>