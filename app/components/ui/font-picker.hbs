{{yield
  (hash
    fontNameSelect=(component
      'ui/font-picker/select'
      fontPickerID=this.fontPickerID
      value=@fontName
      sort=@sort
      onChange=this.onFontNameChange
      fontCategory=this.fontCategory
    )
    fontPickerID=this.fontPickerID
    categories=(component
      'ui/font-picker/categories'
      availableFontCategories=this.fontManager.availableFontCategories
      fontCategory=this.fontCategory
      changeFontCategory=(fn (mut this.fontCategory))
    )
    variantNameSelect=(component
      'x-select'
      model=this.fontVariants
      value=@variantName
      onSelect=this.onVariantNameChange
      required=true
    )
  )
}}